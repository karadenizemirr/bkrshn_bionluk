// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  surname   String
  phone     String    @unique
  email     String    @unique
  password  String
  about     String?
  gender    String    @default("none")
  birthday  DateTime?
  jops      String?
  country   String?
  city      String?
  avatar    Avatar?
  post      Post[]
  role      String    @default("user")
  createdAt DateTime  @default(now())
}

model Avatar {
  id     String  @id @default(uuid())
  url    String
  alt    String?
  slug   String?
  user   User?   @relation(fields: [userId], references: [id])
  userId String? @unique
}

model Category {
  id        String   @id @default(uuid())
  title     String
  createdAt DateTime @default(now())
  post      Post?     @relation(fields: [postId], references: [id])
  postId    String?
}

model Post {
  id        String     @id @default(uuid())
  title     String
  keywords  String
  content   String
  createdAt DateTime   @default(now())
  category  Category[]
  image     Image[]
  user      User       @relation(fields: [userId], references: [id])
  userId    String
  isStatus Boolean @default(false)
}

model Image {
  id        String   @id @default(uuid())
  url       String
  alt       String?
  createdAt DateTime @default(now())
  post      Post?    @relation(fields: [postId], references: [id])
  postId    String?
}
